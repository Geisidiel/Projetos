<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apontamentos de produção</title>
    <script src="js/scriptis.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header>
        <%- include('partials/header'); -%>
    </header> 
    <div  class="div_table_lan">

        <% if (message !="") { %>
          <section   class=" <%= type  %> close">
            <p on="esconderElemento()" id="meuElemento" ><%= message  %></p>
          </section>
        <% } %>



          <div class="scro">

            <table class="table table table-hover ">
              <thead>
                <tr>
                  <th scope="col">Data</th>
                  <th scope="col">Nome</th>
                  <th scope="col">Atividade</th>
                  <th scope="col">Horario</th>
                  <th scope="col">Produção</th>
                  <th scope="col">Meta</th>
                  <th scope="col">Eficiencia</th>
                  <th scope="col">Gap</th>
                  <th scope="col">Actions</th>
  
                 
                </tr>
              </thead>
              <tbody class="dtbales">
                <% apontamentos.forEach(apontamentos => { %>
  
                  <tr>
                    <td><%= apontamentos.data %></td>
                    <td><%= apontamentos.nome %></td>
                    <td><%= apontamentos.atividade %></td>
                    <td><%= apontamentos.horario %></td>
                    <td><%= apontamentos.producao %></td>
                    <td><%= apontamentos.meta %></td>
                    <td><%= apontamentos.eficiencia %></td>
                    <td><%= apontamentos.gap %></td>
                    <td><button type="button" value="<%= apontamentos.id %>" class="btn btn-warning">Editar</button></td>
                    <td><button type="button" value="<%= apontamentos.id %>" class="btn btn-secondary">Excluir</button></td>
                  </tr>
               <% }); %>
                
              </tbody>
            </table>
          </div>
        
          
    </div>
    <footer>
        <%- include('partials/footer'); -%>
    </footer>
    <div>
      <%- include('partials/modal'); -%>
    </div>
</body>

</html>