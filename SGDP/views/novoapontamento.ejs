<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Apontamentos de produção</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header>
        <%- include('partials/header'); -%>
    </header> 

    <div class="div_table_lan">
      <% if (message !="") { %>
        <section class=" <%= type  %>">
          <p><%= message  %></p>
        </section>
      <% } %>
      
      <form class="row g-3 needs-validation" novalidate method="post" action="/lancaproducao">
        <div class="col-md-4">
          <label for="validationCustom01" class="form-label">Data</label>
          <input name="data" type="date" class="form-control" id="validationCustom01" value="Mark" required>
          
        </div>
        <div class="col-md-3">
          <label for="validationCustom04" class="form-label">Unidade</label>
          <select name="unidade" class="form-select" id="validationCustom04" required>
            <option selected disabled value="">Selcione...</option>
            <% Un.forEach(Un => { %>
              <option value="<%= Un.unidades %>"><%= Un.unidades %></option>
            <% }); %>
          </select>
          
        </div>

        <div class="col-md-3">
          <label for="validationCustom04" class="form-label">Nome</label>
          <select name="nome" class="form-select" id="validationCustom04" required>
            <option selected disabled value="">Selcione...</option>
      
            <%  Usr.forEach( Usr => { %>
              <option value="<%=  Usr.nome %>"><%=  Usr.nome %></option>
            <% }); %>
            
          </select>
          
        </div>
        
        <div class="col-md-3">
          <label for="validationCustom04" class="form-label">Atividade</label>
          <select name="atividade" class="form-select" id="validationCustom04" required>
            <option selected disabled value="">Selcione...</option>
            <%  Mt.forEach( Mt => { %>
              <option value="<%=  Mt.atividade %>"><%=Mt.atividade %></option>
            <% }); %>
            
          </select>
          
        </div>
        
        <div class="col-md-3">
          <label for="validationCustom04" class="form-label">Horario</label>
          <select name="horario" class="form-select" id="validationCustom04" required>
            <option selected disabled value="">Selcione...</option>
            <%  Hor.forEach( Hor => { %>
              <option value="<%=  Hor.Horario %>"><%= Hor.Horario %> %></option>
            <% }); %>
          </select>
        
        </div>
        <div class="col-md-3">
          <label for="validationCustom05" class="form-label">Produção</label>
          <input name="producao" type="number" class="form-control" id="validationCustomProd" required>
          
        </div>
        <div class="col-md-3">
          
          <label for="validationCustom05" class="form-label">Meta</label>
          <input name="meta"  type="number" class="form-control" id="validationCustom05" required>
         
        </div>
        
        <div class="col-md-3">
          
          <label for="validationCustom05" class="form-label">Eficiência</label>
          <input name="eficiencia"  type="number" class="form-control" id="validationCustom05" required>
          <div class="invalid-feedback">
            
          </div>
        </div>
        <div class="col-md-3">
          <label for="validationCustom05" class="form-label">Gap</label>
          <input name="gap"  type="number" class="form-control" id="validationCustom05" required>
          
        </div>
        <div class="col-md-3">
          <label for="validationCustom05" class="form-label">Nº lote</label>
          <input name="n_lote"  type="text" class="form-control" id="validationCustom05" required>
          
        </div>

        <div class="col-md-3">
          <label for="validationCustom05" class="form-label">Observação</label>
          <input name="observacao"  type="text" class="form-control" id="validationCustom05" required>
          
        </div>
        <div class="col-md-3">
          <label for="validationCustom05" class="form-label">Ocorrencia</label>
          <input name="ocorrencia" type="text" class="form-control" id="validationCustom05" required>
          
        </div>
        <div class="col-md-3">
          <label for="validationCustom05" class="form-label">Type</label>
          <input name="type"  type="text" class="form-control" id="validationCustom05" required>
          
        </div>

        <div class="col-12">
          <button class="btn btn-primary" type="submit">Lançar</button>
          <a href="/" class="alink_cadss btn btn-danger">Cancelar</a>
        </div>
      </form>

    </div>
    <footer>
        <%- include('partials/footer'); -%>
    </footer>
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="js/scriptis.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>