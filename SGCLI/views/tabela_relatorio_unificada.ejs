<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatorio unificado</title>
    <link rel="stylesheet" href="css/root.css">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
    
    
</head>
<body>
    <div class="main_home_page">
        <div class="menu_div">
            <%- include('partials/header'); -%>
        </div>
        <div class="content_conte">
            <div class="div_tabelas">
                <% if (message !="") { %>
                    <section id="meuElemento" class=" <%= type  %>">
                      <p><%= message  %></p>
                    </section>
                  <% } %>
            
                <div class="div_conteudo_tabela">
                    <fieldset>
                        <legend>Filtros</legend>
                        <div class="div_relatorio">
                            <a  href="/baixar-excel">Relatorio</a>
                        </div>
                        
            
                    </fieldset>
                    
                    <table class="tabela_documento">
                        <thead>
                          <tr>
                            <th scope="col">Cliente</th>
                            <th scope="col">Categoria</th>
                            <th scope="col">Subcategoria</th>
                            <th scope="col">Lote</th>
                            <th scope="col">Documento</th>
                            <th scope="col">Processo</th>
                            <th scope="col">Volume</th>
                            <th scope="col">Descricao</th>
                            <th scope="col">Nº rfid</th>
                            <th scope="col">Nº caixa </th>
                            <th scope="col">Nº caixa </th>
                            <th scope="col">User</th>

                          </tr>
                        </thead>
                        <tbody>


                            <% Movimentos.forEach(relatorio => { %>
                                <tr>
                                    <td><%= relatorio.cliente.cliente %></td>
                                    <td><%= relatorio.categorium.categoria %></td>
                                    <td><%= relatorio.subcategorium.subcategoria %></td>
                                    <td><%= relatorio.Lote.n_lote %></td>
                                    <td><%= relatorio.tipodocumento %></td>
                                    <td><%= relatorio.processo %></td>
                                    <td><%= relatorio.volume %></td>
                                    <td><%= relatorio.descricao %></td>
                                    <td><%= relatorio.vinculo ? relatorio.vinculo.n_rfid : '—' %></td>
                                    <td><%= relatorio.vinculo ? relatorio.vinculo.n_caixa : '—' %></td>
                                    <td><%= relatorio.vinculo ? relatorio.vinculo.n_caixa_secundary : '—' %></td>
                                    <td><%= relatorio.User.nome %></td>
                                    
                                </tr>
                            <% }); %>

                         
                        </tbody>
                    </table>

                </div>
                
            </div>
        
        </div>
    </div>

    <div class="meu_modal">
        
    </div>
</body>

<script src="js/automation.js" defer></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</html>