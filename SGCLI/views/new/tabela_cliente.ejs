<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clienes cadastrados</title>
    <link rel="stylesheet" href="css/root.css">
    <link rel="stylesheet" href="css/newstyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
    <div class="header">
        <%- include('../partials/menu'); -%>
    </div>
    
    <div class="container text-center">
        <div class="div_tabelas">

          <% if (message !="") { %>
          <section id="meuElemento" class=" <%= type  %>">
            <p><%= message  %></p>
          </section>
        <% } %>

          <h4>Lista de clientes cadastrados:</h4>
          <hr>
          <div class="table-scrollable">
          <table class="table table-bordered  table-hover">
            <thead class="table-dark ">
              <tr>
                  <th scope="col">CLIENTE</th>
                            <th scope="col">DATA</th>
                            <th scope="col">USUARIO</th>
                            <th scope="col">AÃ‡OES</th>
               </tr>
            </thead>
            <tbody>
              <% Clientes.forEach(clientes => { %>
                                <tr>
                                    <td><%= clientes.cliente %></td>
                                    <td><%= clientes.createdAt %></td>
                                    <td><%= clientes.User.nome %></td>
                                    <td class="divs_btn_tabela">
                                        <a class="btn btn-primary" href="/:<%= clientes.id %>">Editar</a>
                                        <a class="btn btn-success" href="/:<%= clientes.id %>">Deletar</a>
                                    </td>
                                </tr>
                <% }); %>
            </tbody>
        </table>
        </div>
        </div>
    </div>
    
</body>
</html>
<script  src="/js/automation.js" defer></script>
