<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar categoria</title>
    <link rel="stylesheet" href="css/root.css">
    <link rel="stylesheet" href="css/newstyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
  <div class="header">
    <%- include('../partials/menu'); -%>
</div>
    <div class="container">

      <div class="content_forms_categoria">
        <% if (message !="") { %>
          <section id="meuElemento" class=" <%= type  %>">
            <p><%= message  %></p>
          </section>
        <% } %>
          <form class="form_vincular_categoria"  action="/novacategoria" method="post">
            

            <h4>Cadastrar categoria:</h4>
            <hr>
            <div class="col-md-18">
              <label for="validationCustom04" class="form-label">Cliente:</label>
              <select name="clienteId" id="select1" class="form-select"    >
                <option value="">Selecione</option>
                <% Cliente.forEach(cliente => { %>
                  <option value="<%=cliente.id %>"><%= cliente.cliente %></option>
                <% }); %>
              </select>
            </div>
            
              <div class="col-md-18">
                <label for="validationCustom05" class="form-label">Categoria:</label>
                <input name="categoria" type="text" class="form-control" id="validationCustomProd" >
              </div>
              
              <div class="col-md-18 div_btn_vincular">
                <button type="submit" class="btn btn-success">Cadastrar</button>
                <a class="btn btn-danger" href="/">Cancelar</a>
      
              </div>
  
        </form>
        
      </div>
      
    </div>
    
</body>
</html>
<script src="js/automation.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
