<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doumentos cadastrados</title>
    <link rel="stylesheet" href="css/root.css">
    <link rel="stylesheet" href="css/newstyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
    <div class="header">
        <%- include('../partials/menu'); -%>
    </div>
    
    <div class="container text-center">
        <div class="div_tabelas">

          <% if (message !="") { %>
          <section id="meuElemento" class=" <%= type  %>">
            <p><%= message  %></p>
          </section>
        <% } %>

          <span><h4>Base geral de cadastro de lotes e vinculos registrados:</h4>
          <a class="btn btn-primary"  href="/baixar-excel">Relatorio</a></span>
          <hr>
         <div class="table-scrollable">
      <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        
                            <th scope="col">CLIENTE</th>
                            <th scope="col">CATEGORIA</th>
                            <th scope="col">SUCATEGORIA</th>
                            <th scope="col">LOTE</th>
                            <th scope="col">DOCUMENTO</th>
                            <th scope="col">PROCESSO</th>
                            <th scope="col">VOLUME</th>
                            <th scope="col">DESCRIÇÃO</th>
                            <th scope="col">Nº RFID</th>
                            <th scope="col">Nº CAIXA </th>
                            <th scope="col">Nº CAIXA </th>
                            <th scope="col">USUARIO</th>
                            <th scope="col">AÇOES</th>
      </tr>
    </thead>
    <tbody>
        <% Movimentos.forEach(relatorio => { %>
                                <tr>
                                    <td><%= relatorio.cliente.cliente %></td>
                                    <td><%= relatorio.categorium.categoria %></td>
                                    <td><%= relatorio.subcategorium.subcategoria %></td>
                                    <td><%= relatorio.Lote.n_lote %></td>
                                    <td><%= relatorio.tipodocumento %></td>
                                    <td><%= relatorio.processo %></td>
                                    <td><%= relatorio.volume %></td>
                                    <td><%= relatorio.descricao %></td>
                                    <td><%= relatorio.vinculo ? relatorio.vinculo.n_rfid : '—' %></td>
                                    <td><%= relatorio.vinculo ? relatorio.vinculo.n_caixa : '—' %></td>
                                    <td><%= relatorio.vinculo ? relatorio.vinculo.n_caixa_secundary : '—' %></td>
                                    <td><%= relatorio.User.nome %></td>
                                    <td class="divs_btn_tabela">
                                      <a class="btn btn-primary" href="/:<%=relatorio.id %>">Editar</a>
                                      <form action="/deletelote" method="post">
                                        <button class="btn btn-danger" type="submit">Deletar</button>
                                      </form>
                                    </td>
                                    
                                </tr>
                        <% }); %>        
      
    </tbody>
  </table>
</div>

        </div>
    </div>
    
</body>
</html>
<script  src="/js/automation.js" defer></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.min.js" integrity="sha384-RuyvpeZCxMJCqVUGFI0Do1mQrods/hhxYlcVfGPOfQtPJh0JCw12tUAZ/Mv10S7D" crossorigin="anonymous"></script>