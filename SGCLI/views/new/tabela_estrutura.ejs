<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estruturas cadastradas</title>
    <link rel="stylesheet" href="css/root.css">
    <link rel="stylesheet" href="css/newstyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
    <div class="header">
        <%- include('../partials/menu'); -%>
    </div>
    
    <div class="container text-center">
        <div class="div_tabelas">

          <% if (message !="") { %>
          <section id="meuElemento" class=" <%= type  %>">
            <p><%= message  %></p>
          </section>
        <% } %>

          <h4>Lista de departamentos cadastrados:</h4>
          <hr>
          <div class="table-scrollable">
          <table class="table table-bordered table-striped">
            <thead class="table-dark ">
              <tr>
                <th scope="col">CLIENTE</th>
                <th scope="col">CATEGORIA </th>
                <th scope="col">SUBCATEGORIA </th>
               
               </tr>
            </thead>
            <tbody>
              
                            <% Estrutura.forEach(estrutura => { %>
                                <% if (estrutura.categoria && estrutura.categoria.length > 0) { %>
                                  <% estrutura.categoria.forEach(categoria => { %>
                                    <% if (categoria.subcategoria && categoria.subcategoria.length > 0) { %>
                                      <% categoria.subcategoria.forEach(sub => { %>
                                        <tr>
                                          <td><%= estrutura.cliente %></td>
                                          <td><%= categoria.categoria %></td>
                                          <td><%= sub.subcategoria %></td>
                                         
                                          
                                        </tr>
                                      <% }) %>
                                    <% } else { %>
                                      <tr>
                                        <td><%= estrutura.cliente %></td>
                                        <td><%= categoria.categoria %></td>
                                        <td><em>Sem subcategoria</em></td>
                                        <td><%= estrutura.User?.nome || 'Desconhecido' %></td>
                                        <td class="divs_btn_tabela">-</td>
                                      </tr>
                                    <% } %>
                                  <% }) %>
                                <% } else { %>
                                  <tr>
                                    <td><%= estrutura.cliente %></td>
                                    <td><em>Sem categoria</em></td>
                                    <td><em>Sem subcategoria</em></td>
                                    <td><%= estrutura.User?.nome || 'Desconhecido' %></td>
                                    <td class="divs_btn_tabela">-</td>
                                  </tr>
                                <% } %>
                              <% }); %>
            </tbody>
        </table>
        </div>
        </div>
    </div>
    
</body>
</html>
<script  src="/js/automation.js" defer></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.min.js" integrity="sha384-RuyvpeZCxMJCqVUGFI0Do1mQrods/hhxYlcVfGPOfQtPJh0JCw12tUAZ/Mv10S7D" crossorigin="anonymous"></script>