<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lotes cadastrados</title>
    <link rel="stylesheet" href="css/root.css">
    <link rel="stylesheet" href="css/newstyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
    <div class="header">
        <%- include('../partials/menu'); -%>
    </div>
    
    <div class="container text-center">
        <div class="div_tabelas">

          <% if (message !="") { %>
          <section id="meuElemento" class=" <%= type  %>">
            <p><%= message  %></p>
          </section>
        <% } %>

          <h4>Lista de lotes cadastrados:</h4>
          <hr>
          <div class="table-scrollable">
          <table class="table table-bordered  table-hover">
            <thead class="table-dark ">
              <tr>
                 <th scope="col">LOTE</th>
                 <th scope="col">STATUS</th>
                 <th scope="col">USUARIO</th>
                 <th scope="col">DATA</th>
                 <th scope="col">AÃ‡OES</th>
                          
               </tr>
            </thead>
            <tbody>
               <% Lotes.forEach(lotes => { %>
                                <tr>
                                    <td><%= lotes.n_lote %></td>
                                    <td><%= lotes.localidade %></td>
                                    <td><%= lotes.User.nome %></td>
                                    <td><%= lotes.createdAt %></td>
                                    <td class="divs_btn_tabela">
                                        <form action="/finalizarlote/<%= lotes.id %>" method="post">
                                            <button class="btn btn-success" type="submit">Finalizar</button>
                                        </form>
                                        <form action="/deletelote" method="post">
                                            <button class="btn btn-danger" type="submit">Deletar</button>
                                        </form>
                        
                                    </td>
                                </tr>
                  <% }); %>
            </tbody>
        </table>
        </div>
        </div>
    </div>
    
</body>
</html>
<script  src="/js/automation.js" defer></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
