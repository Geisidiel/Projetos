<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios cadastrados</title>
    <link rel="stylesheet" href="css/root.css">
    <link rel="stylesheet" href="css/newstyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
    <div class="header">
        <%- include('../partials/menu'); -%>
    </div>
    
    <div class="container text-center">
        <div class="div_tabelas">

          <% if (message !="") { %>
          <section id="meuElemento" class=" <%= type  %>">
            <p><%= message  %></p>
          </section>
        <% } %>

          <h4>Lista de usuarios:</h4>
          <hr>
          <div class="table-scrollable">
          <table class="table  table-hover">
            <thead class="table-dark ">
              <tr>
                  <th scope="col">Usuario</th>
                  <th scope="col">Cpf</th>
                  <th scope="col">Age</th>
                  <th scope="col">Data</th>
                  <th scope="col">AÃ§oes</th>
               </tr>
            </thead>
            <tbody>
              <% Usuarios.forEach(usuarios => { %>
                      <tr>
                          <td><%= usuarios.nome %></td>
                          <td><%= usuarios.cpf %></td>
                          <td><%= usuarios.age%></td>
                          <td><%= usuarios.createdAt %></td>
                          <td class="divs_btn_tabela">
                            
                              <a class="btn btn-primary" href="/finalizarlote/ %>">Editar</a>
                            
                        <form action="/deletelote" method="post">
                              <button class="btn btn-success" type="submit">Aprovar</button>
                            </form>
                            </td>
                         </tr>
                <% }); %>
            </tbody>
        </table>
        </div>
        </div>
    </div>
    
</body>
</html>
<script  src="/js/automation.js" defer></script>
